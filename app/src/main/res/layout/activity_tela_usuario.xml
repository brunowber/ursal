<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaUsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bandeira_unao_sovietica10">

        <TextView
            android:id="@+id/textView"
            android:layout_width="352dp"
            android:layout_height="54dp"
            android:text="@string/tela_usuario"
            android:textColor="@color/corFont"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/nome"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="69dp"
            android:maxLength="23"
            android:textColor="@color/corFont"
            android:textColorHint="@color/corFont"/>

        <EditText
            android:id="@+id/edt_guerrilheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/guerrilheiro"
            android:inputType="textPersonName"
            android:text=""
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="125dp"
            android:maxLength="23"
            android:textColor="@color/corFont"
            android:textColorHint="@color/corFont"/>

        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1328632532738670/5911855123" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>